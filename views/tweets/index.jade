extends ../layout

block content
    div(class="card mb-3")
        div(class="card-header")
            i(class="fa fa-table")  Tweets
        div(class="card-body")
            div(class="table-responsive")
                table(class="table table-bordered" width="100%" id="dataTable" cellspacing="0")
                    thead
                        tr
                            th Id
                            th Texto
                            th Busca
                            th Congressita
                            th Sentimento
                            th Internauta
                    tbody
                        each valor, i in lista
                            tr
                                td #{valor._id}
                                td #{valor.texto}
                                td #{valor.busca}
                                td #{valor.congressista}
                                td #{valor.sentimento}
                                td #{valor.internauta}